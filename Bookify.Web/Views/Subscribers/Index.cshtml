@model SearchFormViewModel

@{
	ViewData["Title"] = "Subscribers";
}

<form asp-action="Search"
	  data-ajax-method="post"
	  data-ajax="true"
	  data-ajax-update="#Result"
	  data-ajax-begin="disableSubmitButton"
	  data-ajax-failure="showErrorMessage"
	  data-ajax-complete="onModalComplete">
	<!--begin::Card-->
	<div class="card mb-7">
		<div class="card-header">
			<h3 class="card-title">Find a subscriber</h3>
		</div>
		<!--begin::Card body-->
		<div class="card-body">
			<!--begin::Compact form-->
			<div class="d-flex align-items-center">
				<!--begin::Input group-->
				<div class="position-relative w-md-400px me-md-2">
					<!--begin::Svg Icon | path: icons/duotune/general/gen021.svg-->
					<span class="svg-icon svg-icon-3 svg-icon-gray-500 position-absolute top-50 translate-middle ms-6">
						<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor"></rect>
							<path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor"></path>
						</svg>
					</span>
					<!--end::Svg Icon-->
					<input type="text" class="form-control form-control-solid ps-10" placeholder="Search by mobile, national ID or email ..." asp-for="Value">
				</div>
				<!--end::Input group-->
				<!--begin:Action-->
				<div class="d-flex align-items-center">
					<button type="submit" class="btn btn-primary me-5">Search</button>
				</div>
				<!--end:Action-->
			</div>
			<!--end::Compact form-->
		</div>
		<!--end::Card body-->
	</div>
	<!--end::Card-->
</form>

<div id="Result"></div>

@section Scripts 
{
	<partial name="_ValidationScriptsPartial" />
}